<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<!-- To manipulate the fxml files we need to include fx:controller="sample.CLASSNAMEHERE" on each pane.
For example, fx:controller="sample.LoadGame", as shown below.
Sample is the package name hence why we use sample.ClassName.
It will be changed to more sensible name when programs are put together. -->

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="layout.LoadGame">
   <top>
      <Label text="Load Game Window" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <Button mnemonicParsing="false" onAction="#goBackToMenu" text="Go back to main menu" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
